generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  name     String
  password String
  cart     Cart[]
  products Product[]
}

model Product {
  id          String        @id @default(cuid())
  name        String
  description String
  price       Float
  quantity    Int
  imageUrl    String?
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  carts       CartProduct[]
}

model Cart {
  id       String        @id @default(cuid())
  userId   String
  user     User          @relation(fields: [userId], references: [id])
  products CartProduct[]
}

model CartProduct {
  cartId    String
  productId String
  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@id([cartId, productId])
}
