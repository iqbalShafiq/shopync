generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  name           String
  password       String
  products       Product[]
  productInCarts ProductInCart[]
}

model Product {
  id             String          @id @default(cuid())
  name           String
  description    String
  price          Float
  quantity       Int
  imageUrl       String?
  userId         String
  user           User            @relation(fields: [userId], references: [id])
  productInCarts ProductInCart[]
}

model ProductInCart {
  userId    String
  productId String
  quantity  Int
  user      User    @relation(fields: [userId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@id([userId, productId])
}
